@model one.Models.Employee
@{
    Layout = null;
}

@using (Html.BeginForm("AddorEdit", "Employee", FormMethod.Post, new { onsubmit="return SubmitForm(this)"}))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        @Html.LabelFor(model => model.Employee_Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Employee_Name, new { htmlAttributes = new { @class = "form-control" } })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Employee_Email, new { @class = "control-label" })
        @Html.EditorFor(model => model.Employee_Email, new { htmlAttributes = new { @class = "form-control" } })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Employee_Address, new { @class = "control-label" })
        @Html.EditorFor(model => model.Employee_Address, new { htmlAttributes = new { @class = "form-control" } })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Employee_Number, new { @class = "control-label" })
        @Html.EditorFor(model => model.Employee_Number, new { htmlAttributes = new { @class = "form-control" } })
       
    </div>

    <div class="form-group">
        <input type="submit" value="Insert Data" class="btn btn-success" />
        <input type="reset" value="Cancel" class="btn btn-danger" />
    </div>
}



